{
  "extends": ["airbnb-base", "react-app", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "class-methods-use-this": "off",
    "no-unused-vars": "error",
    "no-underscore-dangle": "off",
    "import/prefer-default-export": "off",
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true,
        "trailingComma": "all"
      }
    ]
  }
}
